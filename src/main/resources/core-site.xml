<!-- Put site-specific property overrides in this file. -->

<configuration>

<!-- 指定NameNode的地址 -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://hadoop102:8020</value>
</property>

<!-- 指定hadoop数据的存储目录 -->
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/opt/app/hadoop-3.1.3/data</value>
</property>

<!-- 配置HDFS网页登录使用的静态用户为 tanbs -->
    <property>
        <name>hadoop.http.staticuser.user</name>
        <value>tanbs</value>
</property>

<!-- 配置该 tanbs (superUser)允许通过代理访问的主机节点 -->
    <property>
        <name>hadoop.proxyuser.tanbs.hosts</name>
        <value>*</value>
</property>

<!-- 配置该 tanbs (superUser)允许通过代理用户所属组 -->
    <property>
        <name>hadoop.proxyuser.tanbs.groups</name>
        <value>*</value>
</property>

<!-- 配置该 tanbs (superUser)允许通过代理的用户-->
    <property>
        <name>hadoop.proxyuser.hdfs.users</name>
        <value>*</value>
</property>

<property>
        <name>dfs.permissions.superusergroup</name>
        <value>tanbs</value>
</property>

<!-- 指定垃圾回收 保持一天删除数据 -->
<property>
   <name>fs.trash.interval</name>
   <value>1440</value>
</property>

</configuration>
